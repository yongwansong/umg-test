{
  "name": "stanza-shopify-theme",
  "version": "0.1.0",
  "description": "A barebones Shopify 2.0 theme with Tailwind CSS and Webpack",
  "private": true,
  "author": "Universal Music Group",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm assets/*",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "serve": "shopify theme dev",
    "start": "concurrently --names \"WATCH,SERVE\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run watch\" \"npm run serve\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.5",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
